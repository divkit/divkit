{
    "description": "Container with content aligned right-to-left. Start/end text blocks should be aligned according to the alignment (right-to-left), left/right must stay unchanged.",
    "platforms": [
        "android",
        "ios"
    ],   
    "configuration": {
        "layout_direction": "rtl"
    },
    "templates": {
        "text_block": {
            "type": "text",
            "font_size": 12,
            "line_height": 15,
            "text_alignment_horizontal": "center",
            "text_alignment_vertical": "center",
            "alignment_horizontal": "center",
            "text_color": "#ffffff",
            "width": {
                "type": "fixed",
                "value": 80
            },
            "paddings": {
                "top": 13,
                "bottom": 13,
                "left": 8,
                "right": 8
            },
            "background": [
                {
                    "type": "solid",
                    "color": "#808080"
                }
            ],
            "border": {
                "corner_radius": 16
            }
        }
    },
    "card": {
        "log_id": "sample_card",
        "states": [
            {
                "state_id": 0,
                "div": {
                    "type": "container",
                    "orientation": "vertical",
                    "items": [
                        {
                            "type": "text_block",
                            "alignment_horizontal": "left",
                            "text": "left"
                        },
                        {
                            "type": "text_block",
                            "alignment_horizontal": "center",
                            "text": "center"
                        },
                        {
                            "type": "text_block",
                            "alignment_horizontal": "right",
                            "text": "right"
                        },
                        {
                            "type": "text_block",
                            "alignment_horizontal": "start",
                            "text": "start"
                        },
                        {
                            "type": "text_block",
                            "alignment_horizontal": "center",
                            "text": "center"
                        },
                        {
                            "type": "text_block",
                            "alignment_horizontal": "end",
                            "text": "end"
                        }
                    ]
                }
            }
        ]
    }
}
