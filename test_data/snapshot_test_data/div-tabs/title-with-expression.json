{
    "description": "Tab title should support expressions",
    "platforms": [
      "android",
      "ios",
      "web"
    ],
    "templates": {},
    "card": {
      "log_id": "div2_sample_card",
      "variables": [{
        "name": "someVar",
        "type": "integer",
        "value": 123
      }],
      "states": [
        {
          "state_id": 0,
          "div": {
            "type": "tabs",
            "items": [{
              "title": "Some @{someVar}",
              "div": {
                "type": "text",
                "text": "Hello",
                "action": {
                  "log_id": "first",
                  "url": "div-action://set_variable?name=someVar&value=@{someVar + 1}"
                }
              }
            }, {
              "title": "Other @{someVar}",
              "div": {
                "type": "text",
                "text": "Hello",
                "action": {
                  "log_id": "second",
                  "url": "div-action://set_variable?name=someVar&value=@{someVar + 1}"
                }
              }
            }]
          }
        }
      ]
    }
  }
