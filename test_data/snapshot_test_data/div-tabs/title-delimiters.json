{
  "description": "Tabs with delimiters (starts) between titles.",
  "platforms": [
    "android"
  ],
  "templates": {
    "text_block": {
      "type": "text",
      "width": {
        "type": "match_parent"
      },
      "height": {
        "type": "wrap_content"
      },
      "paddings": {
        "top": 16,
        "bottom": 16
      },
      "border": {
        "corner_radius": 8
      },
      "background": [
        {
          "type": "solid",
          "color": "#0E000000"
        }
      ],
      "font_size": 14,
      "font_weight": "medium",
      "text_alignment_vertical": "center",
      "text_alignment_horizontal": "center",
      "text_color": "#000000"
    }
  },
  "card": {
    "variables": [
      {
        "name": "delimiter_size",
        "type": "integer",
        "value": 14
      },
      {
        "name": "item_spacing",
        "type": "integer",
        "value": 4
      }
    ],
    "log_id": "sample_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "id": "my_tabs",
          "paddings": {
            "top": 10,
            "bottom": 10,
            "left": 10,
            "right": 10
          },
          "width": {
            "type": "fixed",
            "value": 300
          },
          "border": {
            "stroke": {
              "color": "#888"
            }
          },
          "items": [
            {
              "div": {
                "type": "text_block",
                "text": "Item 0",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 0"
            },
            {
              "div": {
                "text": "Item 1",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 1"
            },
            {
              "div": {
                "text": "Item 2",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 2"
            },
            {
              "div": {
                "text": "Item 3",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 3"
            },
            {
              "div": {
                "text": "Item 4",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 4"
            },
            {
              "div": {
                "text": "Item 5",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 5"
            },
            {
              "div": {
                "text": "Item 6",
                "type": "text_block",
                "width": {
                  "type": "match_parent"
                }
              },
              "title": "Tab 6"
            }
          ],
          "type": "tabs",
          "tab_title_delimiter": {
            "image_url": "https://yastatic.net/s3/home/divkit/star.png",
            "width": {
              "type": "fixed",
              "value": "@{delimiter_size}"
            },
            "height": {
              "type": "fixed",
              "value": "@{delimiter_size}"
            }
          },
          "tab_title_style": {
            "item_spacing": "@{item_spacing}",
            "inactive_background_color": "#f1f1f1"
          }
        }
      }
    ]
  }
}
