{
  "description": "Horizontal pager with fixed height and pages with match_parent height with constraints.",
  "platforms": [
    "android",
    "web"
  ],
  "templates": {
    "block": {
      "type": "text",
      "background": [
        {
          "type": "solid",
          "color": "#aaaaaa"
        }
      ],
      "width": {
        "type": "fixed",
        "value": 120
      },
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "pager_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "width": {
            "type": "fixed",
            "value": 360
          },
          "height": {
            "type": "fixed",
            "value": 100
          },
          "border": {
            "stroke": {
              "color": "#FF0000",
              "width": 1
            }
          },
          "item_spacing": {
            "type": "fixed",
            "value": 4
          },
          "layout_mode": {
            "type": "wrap_content"
          },
          "default_item": 1,
          "items": [
            {
              "type": "block",
              "height": {
                "type": "match_parent"
              },
              "text": "No constraints"
            },
            {
              "type": "block",
              "height": {
                "type": "match_parent",
                "min_size": {
                  "value": 120
                }
              },
              "text": "Min height > pager height"
            },
            {
              "type": "block",
              "height": {
                "type": "match_parent",
                "max_size": {
                  "value": 80
                }
              },
              "text": "Max height < pager height"
            }
          ]
        }
      }
    ]
  }
}
