{
  "description": "Horizontal pager with neighbour page width 0 and paddings",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "templates": {
    "text_page_fixed_height": {
      "type": "text",
      "height": {
        "type": "fixed",
        "value": 80
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    },
    "test_pager": {
      "type": "pager",
      "width": {
        "type": "fixed",
        "value": 360
      },
      "margins": {
        "bottom": 16
      },
      "layout_mode": {
        "type": "fixed",
        "neighbour_page_width": {
          "value": 0
        }
      },
      "paddings": {
        "left": 20,
        "right": 20
      },
      "border": {
        "stroke": {
          "color": "#BBFF0000",
          "width": 1
        }
      },
      "items": [
        {
          "type": "text_page_fixed_height",
          "text": "First page\nneighbour_page_width = 0\npaddings = 20\nLeft padding = 20, neighbour page is not shown"
        },
        {
          "type": "text_page_fixed_height",
          "text": "Middle page\nneighbour_page_width = 0\npaddings = 20\nNeighbour pages visible part = 10"
        },
        {
          "type": "text_page_fixed_height",
          "text": "Last page\nneighbour_page_width = 0\npaddings = 20\nRight padding = 20, neighbour page is not shown"
        }
      ]
    },
    "scale": {
      "type": "slider",
      "width": {
        "type": "fixed",
        "value": 360
      },
      "height": {
        "type": "fixed",
        "value": 20
      },
      "variables": [
        {
          "name": "scale",
          "type": "integer",
          "value": 0
        }
      ],
      "thumb_value_variable": "scale",
      "thumb_style": {
        "type": "shape_drawable",
        "shape": {
          "type": "rounded_rectangle",
          "item_width": {
            "value": 0
          }
        },
        "color": "#00000000"
      },
      "track_inactive_style": {
        "type": "shape_drawable",
        "shape": {
          "type": "rounded_rectangle",
          "item_height": {
            "value": 2
          }
        },
        "color": "#AAAAAA"
      },
      "track_active_style": {
        "type": "shape_drawable",
        "shape": {
          "type": "rounded_rectangle"
        },
        "color": "#0000ff"
      },
      "max_value": 36,
      "tick_mark_inactive_style": {
        "type": "shape_drawable",
        "shape": {
          "type": "rounded_rectangle",
          "item_height": {
            "value": 6
          },
          "item_width": {
            "value": 1
          }
        },
        "color": "#000000"
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "width": {
            "type": "wrap_content"
          },
          "items": [
            {
              "type": "test_pager"
            },
            {
              "type": "test_pager",
              "default_item": 1
            },
            {
              "type": "test_pager",
              "default_item": 2
            },
            {
              "type": "scale"
            }
          ]
        }
      }
    ]
  }
}
