          },
          {
            "style": "mark"
          }
        ],
        "prototypes": [
          {
            "selector": "@{getStringFromDict(it, 'style') == 'scale'}",
            "div": {
              "type": "separator",
              "width": {
                "type": "fixed",
                "value": 2
              },
              "height": {
                "type": "match_parent"
              },
              "delimiter_style": {
                "orientation": "vertical",
                "color": "#AAAAAA"
              },
              "alignment_horizontal": "center"
            }
          },
          {
            "selector": "@{getStringFromDict(it, 'style') == 'mark'}",
            "div": {
              "type": "separator",
              "width": {
                "type": "fixed",
                "value": 6
              },
              "height": {
                "type": "fixed",
                "value": 1
              },
              "margins": {
                "top": "@{index * 10}"
              },
              "delimiter_style": {
                "color": "#000000"
              }
            }
          }
        ]
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "horizontal",
          "items": [
            {
              "type": "container",
              "width": {
                "type": "wrap_content"
              },
              "items": [
                {
                  "type": "test_pager",
                  "default_item": 0,
                  "margins": {
                    "bottom": 20
                  }
                },
                {
                  "type": "test_pager",
                  "default_item": 1,
                  "margins": {
                    "bottom": 20
                  }
                },
                {
                  "type": "test_pager",
                  "default_item": 2
                }
              ]
            },
            {
              "type": "scale",
              "margins": {
                "left": 16
              }
            }
          ]
        }
      }
    ]
  }
}
