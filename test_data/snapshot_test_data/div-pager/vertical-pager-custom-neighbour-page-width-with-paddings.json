{
  "description": "Vertical pager with custom neighbour page width and paddings",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "templates": {
    "text_page_match_parent_height": {
      "type": "text",
      "height": {
        "type": "match_parent"
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    },
    "test_pager": {
      "type": "pager",
      "orientation": "vertical",
      "width": {
        "type": "fixed",
        "value": 300
      },
      "height": {
        "type": "fixed",
        "value": 120
      },
      "border": {
        "stroke": {
          "color": "#BBFF0000",
          "width": 1
        }
      },
      "layout_mode": {
        "type": "fixed",
        "neighbour_page_width": {
          "value": 10
        }
      },
      "paddings": {
        "top": 40,
        "bottom": 40
      },
      "items": [
        {
          "type": "text_page_match_parent_height",
          "text": "First page\nneighbour_page_width = 10\npaddings = 40\nTop padding = 40, neighbour page is not shown"
        },
        {
          "type": "text_page_match_parent_height",
          "text": "Middle page\nneighbour_page_width = 10\npaddings = 40\nNeighbour pages visible part = 20"
        },
        {
          "type": "text_page_match_parent_height",
          "text": "Last page\nneighbour_page_width = 10\npaddings = 40\nBottom padding = 40, neighbour page is not shown"
        }
      ]
    },
    "scale": {
      "type": "container",
      "orientation": "overlap",
      "width": {
        "type": "wrap_content"
      },
      "height": {
        "type": "match_parent"
      },
      "item_builder": {
        "data": [
          {
            "style": "scale"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
            "style": "mark"
          },
          {
