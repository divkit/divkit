{
  "description": "Vertical pager with layout mode 'wrap_content' and few small pages",
  "platforms": [
    "android"
  ],
  "templates": {
    "text_page_match_parent_height": {
      "type": "text",
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    },
    "test_pager": {
      "type": "pager",
      "orientation": "vertical",
      "width": {
        "type": "fixed",
        "value": 90
      },
      "height": {
        "type": "fixed",
        "value": 300
      },
      "border": {
        "stroke": {
          "color": "#BBFF0000",
          "width": 1
        }
      },
      "layout_mode": {
        "type": "wrap_content"
      },
      "item_spacing": {
        "value": 10
      },
      "paddings": {
        "top": 10,
        "bottom": 10
      },
      "items": [
        {
          "type": "text_page_match_parent_height",
          "height": {
            "type": "fixed",
            "value": 90
          },
          "text": "Item 0"
        },
        {
          "type": "text_page_match_parent_height",
          "height": {
            "type": "fixed",
            "value": 60
          },
          "text": "Item 1"
        },
        {
          "type": "text_page_match_parent_height",
          "height": {
            "type": "fixed",
            "value": 70
          },
          "text": "Item 2"
        }
      ]
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "items": [
            {
              "type": "text",
              "text_alignment_horizontal": "center",
              "margins": {
                "bottom": 20
              },
              "text": "Pager height = 300\nlayout_mode = wrap_content\nitem_spacing = 10\npaddings = 10\nPager is always scrolled to start"
            },
            {
              "type": "container",
              "orientation": "horizontal",
              "items": [
                {
                  "type": "test_pager",
                  "default_item": 0,
                  "margins": {
                    "right": 20
                  }
                },
                {
                  "type": "test_pager",
                  "default_item": 1,
                  "margins": {
                    "right": 20
                  }
                },
                {
                  "type": "test_pager",
                  "default_item": 2
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
