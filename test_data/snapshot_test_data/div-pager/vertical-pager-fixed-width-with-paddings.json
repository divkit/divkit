{
  "description": "Vertical pager with paddings and items which are wider than pager",
  "platforms": [
    "android",
    "ios"
  ],
  "templates": {
    "text_page": {
      "type": "text",
      "width": {
        "type": "fixed",
        "value": 80
      },
      "margins": {
        "top": 5,
        "bottom": 5
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ]
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "width": {
            "type": "fixed",
            "value": 80
          },
          "height": {
            "type": "fixed",
            "value": 100
          },
          "layout_mode": {
            "type": "fixed",
            "neighbour_page_width": {
              "type": "fixed",
              "value": 0
            }
          },
          "orientation": "vertical",
          "paddings": {
            "left": 10,
            "top": 10,
            "right": 10,
            "bottom": 10
          },
          "border": {
            "stroke": {
              "color": "#BBFF0000",
              "width": 1
            },
            "corner_radius": 10
          },
          "items": [
            {
              "type": "text_page",
              "text": "For millions of years mankind lived just like animals"
            },
            {
              "type": "text_page",
              "text": "We learned to talk"
            }
          ]
        }
      }
    ]
  }
}
