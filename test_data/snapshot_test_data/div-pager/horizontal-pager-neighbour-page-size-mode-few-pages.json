{
  "description": "Horizontal pager with layout mode 'fixed' and few small pages",
  "platforms": [
    "android",
    "web"
  ],
  "templates": {
    "title": {
      "type": "text",
      "text_alignment_horizontal": "center"
    },
    "text_page_fixed_height": {
      "type": "text",
      "height": {
        "type": "fixed",
        "value": 60
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    },
    "test_pager": {
      "type": "pager",
      "width": {
        "type": "fixed",
        "value": 300
      },
      "margins": {
        "bottom": 16
      },
      "layout_mode": {
        "type": "fixed",
        "neighbour_page_width": {
          "value": 100
        }
      },
      "border": {
        "stroke": {
          "color": "#BBFF0000",
          "width": 1
        }
      },
      "item_spacing": {
        "value": 10
      },
      "paddings": {
        "left": 10,
        "right": 10
      },
      "items": [
        {
          "type": "text_page_fixed_height",
          "text": "Item 0"
        },
        {
          "type": "text_page_fixed_height",
          "text": "Item 1"
        },
        {
          "type": "text_page_fixed_height",
          "text": "Item 2"
        }
      ]
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "width": {
            "type": "wrap_content"
          },
          "items": [
            {
              "type": "title",
              "text": "Pager width = 300\nneighbour_page_width = 100\nitem_spacing = 10\npaddings = 10",
              "margins": {
                "bottom": 20
              }
            },
            {
              "type": "title",
              "text": "Default item = 0, pager is scrolled to start, left padding = 10"
            },
            {
              "type": "test_pager"
            },
            {
              "type": "title",
              "text": "Default item = 1, pager is scrolled to start, left padding = 10"
            },
            {
              "type": "test_pager",
              "default_item": 1
            },
            {
              "type": "title",
              "text": "Default item = 2, pager is scrolled to start, left padding = 10"
            },
            {
              "type": "test_pager",
              "default_item": 2
            }
          ]
        }
      }
    ]
  }
}
