{
  "description": "Horizontal pager with paddings and items with match_parent height",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "templates": {
    "text_page": {
      "type": "text",
      "height": {
        "type": "match_parent"
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "height": {
            "type": "fixed",
            "value": 100
          },
          "layout_mode": {
            "type": "percentage",
            "page_width": {
              "value": 90
            }
          },
          "paddings": {
            "top": 10,
            "bottom": 10
          },
          "border": {
            "stroke": {
              "color": "#BBFF0000",
              "width": 1
            }
          },
          "items": [
            {
              "type": "text_page",
              "text": "Page height = match_parent\nPaddings = 10\nTop and bottom paddings are shown and top and bottom borders are drawn."
            },
            {
              "type": "text_page",
              "text": "We learned to talk"
            }
          ]
        }
      }
    ]
  }
}
