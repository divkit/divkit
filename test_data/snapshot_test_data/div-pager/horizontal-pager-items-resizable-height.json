{
  "description": "Pager with pages with match_parent height",
  "platforms": [
    "android",
    "ios",
    "web",
    "flutter"
  ],
  "templates": {
    "text_page_match_parent_height": {
      "type": "text",
      "height": {
        "type": "match_parent"
      },
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "layout_mode": {
            "type": "percentage",
            "page_width": {
              "value": 90
            }
          },
          "height": {
            "type": "fixed",
            "value": 120
          },
          "border": {
            "stroke": {
              "color": "#BBFF0000",
              "width": 1
            }
          },
          "items": [
            {
              "type": "text_page_match_parent_height",
              "text": "Page height = match_parent\nPaddings = 0\nTop and bottom borders are drawn."
            },
            {
              "type": "image",
              "image_url": "https://yastatic.net/s3/home/divkit/chess.png",
              "height": {
                "type": "match_parent"
              }
            },
            {
              "type": "text_page_match_parent_height",
              "text": "We learned to talk"
            }
          ]
        }
      }
    ]
  }
}
