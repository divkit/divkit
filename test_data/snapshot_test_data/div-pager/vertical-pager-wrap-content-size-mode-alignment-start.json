{
  "description": "Vertical pager with wrap_content page width with scroll_axis_alignment start.",
  "platforms": [
    "android",
    "ios"
  ],
  "templates": {
    "text_page_wrap_content": {
      "type": "text",
      "background": [
        {
          "color": "#AAAAAA",
          "type": "solid"
        }
      ],
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    },
    "test_pager": {
      "type": "pager",
      "orientation": "vertical",
      "width": {
        "type": "fixed",
        "value": 300
      },
      "height": {
        "type": "fixed",
        "value": 120
      },
      "border": {
        "stroke": {
          "color": "#BBFF0000",
          "width": 1
        }
      },
      "layout_mode": {
        "type": "wrap_content"
      },
      "item_spacing": {
        "value": 10
      },
      "paddings": {
        "top": 20,
        "bottom": 20
      },
      "scroll_axis_alignment": "start",
      "items": [
        {
          "type": "text_page_wrap_content",
          "height": {
            "type": "fixed",
            "value": 80
          },
          "text": "First page, page content size = 80\npaddings = 20, item_spacing = 10, alignment = end\nTop padding = 20, bottom neighbour = 10"
        },
        {
          "type": "text_page_wrap_content",
          "height": {
            "type": "fixed",
            "value": 60
          },
          "text": "Middle page, page content size = 60\npaddings = 20, item_spacing = 10, alignment = end\nTop neighbour = 10, bottom neighbour = 30"
        },
        {
          "type": "text_page_wrap_content",
          "height": {
            "type": "fixed",
            "value": 70
          },
          "text": "Last page, page content size = 70\npaddings = 20, item_spacing = 10, alignment = end\nBottom padding = 20, top neighbour = 20"
        }
      ]
    },
    "scale": {
      "type": "container",
      "orientation": "overlap",
      "width": {
        "type": "wrap_content"
      },
      "height": {
        "type": "match_parent"
      },
      "item_builder": {
