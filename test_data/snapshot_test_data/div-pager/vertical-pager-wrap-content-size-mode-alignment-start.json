        "prototypes": [
          {
            "selector": "@{getStringFromDict(it, 'style') == 'scale'}",
            "div": {
              "type": "separator",
              "width": {
                "type": "fixed",
                "value": 2
              },
              "height": {
                "type": "match_parent"
              },
              "delimiter_style": {
                "orientation": "vertical",
                "color": "#AAAAAA"
              },
              "alignment_horizontal": "center"
            }
          },
          {
            "selector": "@{getStringFromDict(it, 'style') == 'mark'}",
            "div": {
              "type": "separator",
              "width": {
                "type": "fixed",
                "value": 6
              },
              "height": {
                "type": "fixed",
                "value": 1
              },
              "margins": {
                "top": "@{index * 10}"
              },
              "delimiter_style": {
                "color": "#000000"
              }
            }
          }
        ]
      }
    }
