{
  "description": "Pager with wrap_content height and children with different height have height of the tallest initially visible child.",
  "platforms": [
    "android",
    "ios",
    "web",
    "flutter"
  ],
  "templates": {
    "block": {
      "type": "text",
      "background": [
        {
          "type": "solid",
          "color": "#aaaaaa"
        }
      ],
      "height": {
        "type": "fixed",
        "$value": "block_height"
      },
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "pager_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "width": {
            "type": "fixed",
            "value": 200
          },
          "border": {
            "stroke": {
              "color": "#FF0000",
              "width": 1
            }
          },
          "item_spacing": {
            "type": "fixed",
            "value": 4
          },
          "layout_mode": {
            "type": "percentage",
            "page_width": {
              "value": 70
            }
          },
          "default_item": 1,
          "items": [
            {
              "type": "block",
              "block_height": 70,
              "text": "Height = 70"
            },
            {
              "type": "block",
              "block_height": 50,
              "text": "Pager height is equal to tallest page height"
            },
            {
              "type": "block",
              "block_height": 60,
              "text": "Height = 60"
            }
          ]
        }
      }
    ]
  }
}
