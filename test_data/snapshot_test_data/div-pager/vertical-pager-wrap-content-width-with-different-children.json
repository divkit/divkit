{
  "description": "Pager with wrap_content width and children with different width have width of the widest initially visible child.",
  "platforms": [
    "android",
    "ios",
    "web",
    "flutter"
  ],
  "templates": {
    "block": {
      "type": "text",
      "background": [
        {
          "type": "solid",
          "color": "#aaaaaa"
        }
      ],
      "width": {
        "type": "fixed",
        "$value": "block_width"
      },
      "height": {
        "type": "match_parent"
      },
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "pager_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "pager",
          "orientation": "vertical",
          "width": {
            "type": "wrap_content"
          },
          "height": {
            "type": "fixed",
            "value": 100
          },
          "item_spacing": {
            "type": "fixed",
            "value": 4
          },
          "layout_mode": {
            "type": "percentage",
            "page_width": {
              "value": 60
            }
          },
          "default_item": 1,
          "border": {
            "stroke": {
              "color": "#FF0000",
              "width": 1
            }
          },
          "items": [
            {
              "type": "block",
              "block_width": 200,
              "text": "Width = 200"
            },
            {
              "type": "block",
              "block_width": 120,
              "text": "Pager width is equal to widest page width"
            },
            {
              "type": "block",
              "block_width": 140,
              "text": "Width = 140"
            }
          ]
        }
      }
    ]
  }
}
