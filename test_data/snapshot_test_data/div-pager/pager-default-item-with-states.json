{
  "description": "TODO: https://nda.ya.ru/t/MMvpmt855oXgre",
  "platforms": [
    "android",
    "ios",
    "web",
    "flutter"
  ],
  "templates": {
    "pager_item_text": {
      "type": "text",
      "paddings": {
        "left": 16,
        "right": 16
      },
      "text_color": "#ffffff",
      "margins": {
        "bottom": 16
      },
      "font_size": 16
    },
    "pager_item_button": {
      "type": "text",
      "height": {
        "type": "fixed",
        "value": 48
      },
      "paddings": {
        "left": 16,
        "right": 16
      },
      "background": [
        {
          "type": "solid",
          "color": "#1ABC9C"
        }
      ],
      "border": {
        "corner_radius": 4
      },
      "font_size": 16,
      "font_weight": "medium",
      "max_lines": 1,
      "text_alignment_horizontal": "center",
      "text_alignment_vertical": "center",
      "text_color": "#2C3E50"
    },
    "pager_item_content": {
      "type": "container",
      "width": {
        "type": "match_parent"
      },
      "height": {
        "type": "wrap_content"
      },
      "background": [
        {
          "type": "solid",
          "color": "#80ff0000"
        }
      ],
      "items": [
        {
          "type": "text",
          "text_color": "#ffffff",
          "font_size": 24,
          "text_alignment_horizontal": "center",
          "$text": "header_text"
        },
        {
          "type": "state",
          "$id": "content_id",
          "states": [
            {
              "state_id": "collapsed",
              "animation_in": {
                "name": "fade",
                "interpolator": "ease",
                "duration": 200
              },
              "animation_out": {
                "name": "fade",
                "interpolator": "ease_in_out",
                "duration": 200
              },
              "div": {
                "type": "pager_item_text",
                "max_lines": 3,
                "$text": "item_text"
              }
            },
            {
              "state_id": "expanded",
              "animation_in": {
                "name": "fade",
                "interpolator": "ease",
                "duration": 200
              },
              "animation_out": {
                "name": "fade",
                "interpolator": "ease_in_out",
                "duration": 200
              },
              "div": {
                "type": "pager_item_text",
                "$text": "item_text"
              }
            }
          ]
        },
        {
          "type": "state",
          "$id": "button_id",
          "states": [
            {
              "state_id": "text_expand",
              "div": {
                "type": "pager_item_button",
                "text": "EXPAND",
                "actions": [
                  {
                    "log_id": "expand_content",
                    "$url": "content_expand_action"
                  },
                  {
                    "log_id": "button_text_collapse",
                    "$url": "text_collapse_action"
                  }
                ]
              }
            },
            {
              "state_id": "text_collapse",
              "div": {
                "type": "pager_item_button",
                "text": "COLLAPSE",
                "actions": [
                  {
                    "log_id": "collapse_content",
                    "$url": "content_collapse_action"
                  },
                  {
                    "log_id": "button_text_expand",
                    "$url": "text_expand_action"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  },
