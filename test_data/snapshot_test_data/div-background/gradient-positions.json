{
  "description": "Linear gradient with different positions.",
  "platforms": [
    "ios",
    "web",
    "android"
  ],
  "templates": {
    "color_block": {
      "type": "container",
      "width": {
        "type": "fixed",
        "value": 100
      },
      "height": {
        "type": "fixed",
        "value": 20
      },
      "border": {
        "stroke": {
          "width": 2,
          "color": "#000"
        }
      },
      "margins": {
        "left": 12
      }
    },
    "title": {
      "type": "text",
      "font_size": 20,
      "margins": {
        "top": 4,
        "bottom": 8,
        "left": 12
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "items": [
            {
              "type": "title",
              "text": "Gradient with 2 points"
            },
            {
              "type": "color_block",
              "background": [
                {
                  "type": "gradient",
                  "color_map": [
                    {
                      "color": "#f00",
                      "position": 0
                    },
                    {
                      "color": "#0f0",
                      "position": 1
                    }
                  ]
                }
              ]
            },
            {
              "type": "title",
              "text": "Positions"
            },
            {
              "type": "color_block",
              "background": [
                {
                  "type": "gradient",
                  "color_map": [
                    {
                      "color": "#f00",
                      "position": 0
                    },
                    {
                      "color": "#0f0",
                      "position": 0.1
                    },
                    {
                      "color": "#0f0",
                      "position": 1
                    }
                  ]
                }
              ]
            },
            {
              "type": "title",
              "text": "Expand to edge"
            },
            {
              "type": "color_block",
              "background": [
                {
                  "type": "gradient",
                  "color_map": [
                    {
                      "color": "#f00",
                      "position": 0
                    },
                    {
                      "color": "#0f0",
                      "position": 0.1
                    }
                  ]
                }
              ]
            },
            {
              "type": "title",
              "text": "Sharp transition"
            },
            {
              "type": "color_block",
              "background": [
                {
                  "type": "gradient",
                  "color_map": [
                    {
                      "color": "#f00",
                      "position": 0.5
                    },
                    {
                      "color": "#0f0",
                      "position": 0.5
                    }
                  ]
                }
              ]
            },
            {
              "type": "title",
              "text": "Out of order"
            },
            {
              "type": "color_block",
              "background": [
                {
                  "type": "gradient",
                  "color_map": [
                    {
                      "color": "#f00",
                      "position": 1
                    },
                    {
                      "color": "#0f0",
                      "position": 0
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
