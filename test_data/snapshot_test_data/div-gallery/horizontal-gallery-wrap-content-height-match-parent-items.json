{
  "description": "Horizontal gallery with wrap_content height and items with match_parent height",
  "platforms": [
    "android",
    "web"
  ],
  "templates": {
    "gallery_item": {
      "type": "text",
      "width": {
        "type": "fixed",
        "value": 90
      },
      "height": {
        "type": "match_parent"
      },
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      },
      "font_size": 16,
      "text_alignment_horizontal": "center",
      "text_alignment_vertical": "center"
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "gallery",
          "orientation": "horizontal",
          "width": {
            "type": "fixed",
            "value": 300
          },
          "height": {
            "type": "wrap_content"
          },
          "border": {
            "stroke": {
              "color": "#FF0000"
            }
          },
          "items": [
            {
              "type": "gallery_item",
              "text": "Short text"
            },
            {
              "type": "gallery_item",
              "text": "This is a longer text that should determine the gallery height"
            },
            {
              "type": "gallery_item",
              "text": "Medium"
            }
          ]
        }
      }
    ]
  }
}
