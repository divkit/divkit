{
  "description": "Vertical gallery with wrap_content width, paddings and match_parent items",
  "platforms": [
    "android",
    "web"
  ],
  "templates": {
    "gallery_item": {
      "type": "text",
      "width": {
        "type": "match_parent"
      },
      "height": {
        "type": "fixed",
        "value": 60
      },
      "border": {
        "stroke": {
          "color": "#0000FF",
          "width": 2
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      },
      "font_size": 16,
      "text_alignment_horizontal": "center",
      "text_alignment_vertical": "center"
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "gallery",
          "orientation": "vertical",
          "width": {
            "type": "wrap_content"
          },
          "height": {
            "type": "fixed",
            "value": 220
          },
          "paddings": {
            "left": 15,
            "top": 10,
            "right": 20,
            "bottom": 10
          },
          "border": {
            "stroke": {
              "color": "#FF0000"
            }
          },
          "items": [
            {
              "type": "gallery_item",
              "text": "Text element"
            },
            {
              "type": "gallery_item",
              "text": "Longer text that\ndetermines gallery width"
            },
            {
              "type": "gallery_item",
              "text": "Short"
            }
          ]
        }
      }
    ]
  }
}
