{
  "description": "Default state with borders",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "templates": {},
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "state",
