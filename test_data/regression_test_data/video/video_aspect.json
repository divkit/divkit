                "weight": 1
            },
            "items": [
                {
                    "type": "text",
                    "$text": "text",
                    "font_size": 20
                },
                {
                    "type": "video",
                    "height": {
                        "type": "fixed",
                        "value": 50
                    },
                    "video_sources": [
                        {
                            "type": "video_source",
