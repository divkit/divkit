                "bottom": 8
              },
              "text": "Title",
              "width": {
                "type": "wrap_content"
              },
              "action": {
                "log_id": "show_tooltip",
                "url": "div-action://show_tooltip?id=tooltip"
              }
            },
            {
              "type": "state",
              "div_id": "content",
              "states": [
                {
                  "state_id": "collapsed",
                  "div": {
                    "type": "content_text",
                    "id": "content_text",
                    "margins": {
