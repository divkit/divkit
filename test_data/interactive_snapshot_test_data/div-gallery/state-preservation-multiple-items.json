{
  "description": "Gallery with multiple items having independent states. Changes states of multiple items, scrolls through gallery to trigger view reuse, verifies all states are preserved independently.",
  "platforms": [
    "android",
    "ios",
    "web"
  ],
  "div_data": {
    "templates": {
      "gallery_item": {
        "type": "container",
        "orientation": "vertical",
        "width": {
          "type": "fixed",
          "value": 140
        },
        "height": {
          "type": "fixed",
          "value": 180
        },
        "border": {
          "corner_radius": 8,
          "stroke": {
            "color": "#CCCCCC",
            "width": 1
          }
        },
        "paddings": {
          "left": 10,
          "top": 10,
          "right": 10,
          "bottom": 10
        },
        "margins": {
          "left": 6,
          "right": 6
        },
        "background": [
          {
            "type": "solid",
            "color": "#F8F9FA"
          }
        ],
        "items": [
          {
            "type": "text",
            "$text": "item_number",
            "font_size": 16,
            "font_weight": "bold",
            "text_alignment_horizontal": "center",
            "text_color": "#34495E",
            "margins": {
              "bottom": 8
            }
          },
          {
            "type": "state",
            "$id": "item_state_id",
            "default_state_id": "inactive",
            "states": [
              {
                "state_id": "inactive",
                "div": {
                  "type": "container",
                  "orientation": "vertical",
                  "items": [
                    {
                      "type": "text",
                      "text": "●",
                      "font_size": 32,
                      "text_color": "#95A5A6",
                      "text_alignment_horizontal": "center"
                    },
                    {
                      "type": "text",
                      "text": "Inactive",
                      "font_size": 14,
                      "text_color": "#7F8C8D",
                      "text_alignment_horizontal": "center",
                      "margins": {
                        "top": 4
                      }
                    }
                  ]
                }
              },
              {
                "state_id": "active",
                "div": {
                  "type": "container",
                  "orientation": "vertical",
                  "items": [
                    {
                      "type": "text",
                      "text": "●",
                      "font_size": 32,
                      "text_color": "#27AE60",
                      "text_alignment_horizontal": "center"
                    },
                    {
                      "type": "text",
                      "text": "Active",
                      "font_size": 14,
                      "text_color": "#229954",
                      "text_alignment_horizontal": "center",
                      "margins": {
                        "top": 4
                      }
                    }
                  ]
                }
              }
            ]
          }
        ]
      }
    },
