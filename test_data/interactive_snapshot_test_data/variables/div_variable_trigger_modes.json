{
  "description": "Variable triggers (modes)",
  "platforms": [
    "android"
  ],
  "div_data": {
    "templates": {
      "round": {
        "type": "separator",
        "width": {
          "type": "fixed",
          "value": 64
        },
        "height": {
          "type": "fixed",
          "value": 64
        },
        "border": {
          "corner_radius": 32
        },
        "delimiter_style": {
          "color": "#0000"
        }
      },
      "button": {
        "type": "text",
        "border": {
          "corner_radius": 8
        },
        "width": {
          "type": "match_parent"
        },
        "height": {
          "type": "fixed",
          "value": 48
        },
        "margins": {
          "left": 16,
          "top": 16,
          "right": 16,
          "bottom": 16
        },
        "font_size": 18,
        "font_weight": "medium",
        "text_alignment_vertical": "center",
        "text_alignment_horizontal": "center",
        "text_color": "#34495E"
      }
    },
    "card": {
      "log_id": "blink_animation",
      "variables": [
        {
          "name": "thumb_value",
          "type": "integer",
          "value": 0
        },
        {
          "name": "first_positive_number",
          "type": "number",
          "value": 0.0
        },
        {
          "name": "last_positive_number",
          "type": "number",
          "value": 0.0
        }
      ],
      "variable_triggers": [
        {
          "condition": "@{thumb_value > 0}",
          "mode": "on_condition",
          "actions": [
            {
              "log_id": "update: first_positive_number",
              "url": "div-action://set_variable?name=first_positive_number&value=@{thumb_value}"
            }
          ]
        },
        {
          "condition": "@{thumb_value > 0}",
          "mode": "on_variable",
          "actions": [
            {
              "log_id": "update: last_positive_number",
              "url": "div-action://set_variable?name=last_positive_number&value=@{thumb_value}"
            }
          ]
        }
      ],
      "states": [
        {
          "state_id": 0,
          "div": {
            "type": "container",
            "orientation": "vertical",
            "height": {
              "type": "match_parent"
            },
            "paddings": {
              "left": 16,
              "top": 16,
              "right": 16,
              "bottom": 16
            },
            "items": [
              {
                "type": "text",
                "font_size": 18,
                "line_height": 30,
                "height": {
                  "type": "wrap_content"
                },
                "paddings": {
                  "top": 16,
                  "bottom": 16,
                  "left": 12,
                  "right": 12
                },
                "text_alignment_vertical": "center",
                "text_alignment_horizontal": "left",
                "text_color": "#000000",
                "text": "Thumb value: @{thumb_value}\nFirst selected positive number: @{first_positive_number}\nLast selected positive number: @{last_positive_number}"
              },
              {
                "type": "slider",
                "width": {
                  "type": "match_parent"
                },
                "max_value": 5,
                "min_value": -5,
                "thumb_value_variable": "thumb_value",
                "thumb_style": {
                  "type": "shape_drawable",
                  "color": "#FFCC00",
                  "stroke": {
                    "color": "#ffffff",
                    "width": 3
                  },
                  "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                      "type": "fixed",
                      "value": 32
                    },
                    "item_width": {
                      "type": "fixed",
                      "value": 32
                    },
                    "corner_radius": {
                      "type": "fixed",
                      "value": 100
                    }
                  }
                },
                "track_active_style": {
                  "type": "shape_drawable",
                  "color": "#FFCC00",
                  "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                      "type": "fixed",
                      "value": 6
                    }
                  }
                },
                "track_inactive_style": {
                  "type": "shape_drawable",
                  "color": "#20000000",
                  "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                      "type": "fixed",
                      "value": 6
                    }
                  }
                },
                "tick_mark_active_style": {
                  "type": "shape_drawable",
                  "color": "#FFCC00",
                  "stroke": {
                    "color": "#ffffff",
                    "width": 2
                  },
                  "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                      "type": "fixed",
                      "value": 8
                    },
                    "item_width": {
                      "type": "fixed",
                      "value": 8
                    },
                    "corner_radius": {
                      "type": "fixed",
                      "value": 5
                    }
                  }
                },
                "tick_mark_inactive_style": {
                  "type": "shape_drawable",
                  "color": "#20000000",
                  "stroke": {
                    "color": "#ffffff",
                    "width": 2
                  },
                  "shape": {
                    "type": "rounded_rectangle",
                    "item_height": {
                      "type": "fixed",
                      "value": 8
                    },
                    "item_width": {
                      "type": "fixed",
                      "value": 8
                    },
                    "corner_radius": {
                      "type": "fixed",
                      "value": 5
                    }
                  }
                },
                "thumb_text_style": {
                  "font_size": 14,
                  "text_color": "#FFFFFF",
                  "font_weight": "bold"
                }
              }
            ]
          }
        }
      ]
    }
  },
  "steps": [
    {
      "expected_screenshot": "step0.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=thumb_value&value=3",
          "log_id": "thumb_value_3"
        }
      ]
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=thumb_value&value=5",
          "log_id": "thumb_value_5"
        }
      ]
    }
  ]
}
