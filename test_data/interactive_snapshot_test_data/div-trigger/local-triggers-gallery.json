{
  "description": "Local triggers with gallery",
  "platforms": [
    "ios"
  ],
  "div_data": {
    "templates": {
      "text_block": {
        "type": "text",
        "font_size": 14,
        "text_alignment_horizontal": "center",
        "text_alignment_vertical": "center",
        "alignment_horizontal": "center",
        "text_color": "#1ABC9C",
        "paddings": {
          "top": 4,
          "bottom": 4,
          "left": 8,
          "right": 8
        },
        "margins": {
          "bottom": 4
        },
        "width": {
          "type": "fixed",
          "value": 200
        },
        "height": {
          "type": "fixed",
          "value": 80
        },
        "background": [
          {
            "type": "solid",
            "color": "#34495E"
          }
        ]
      },
      "div_base": {
        "type": "gallery",
        "id": "gallery1",
        "orientation": "vertical",
        "restrict_parent_scroll": 1,
        "margins": {
          "left": 10,
          "top": 10,
          "right": 10,
          "bottom": 10
        },
        "height": {
          "type": "match_parent"
        }
      },
      "item": {
        "type": "text",
        "font_size": 14,
        "text_alignment_horizontal": "center",
        "text_alignment_vertical": "center",
        "alignment_horizontal": "center",
        "paddings": {
          "top": 4,
          "bottom": 4,
          "left": 8,
          "right": 8
        },
        "margins": {
          "left": 8,
          "right": 8
        },
        "width": {
          "type": "fixed",
          "value": 120
        },
        "height": {
          "type": "fixed",
          "value": 120
        },
        "background": [
          {
            "type": "solid",
            "color": "#34495E"
          }
        ]
      }
    },
    "card": {
      "log_id": "sample_card",
      "variables": [
        {
          "name": "counter",
          "type": "integer",
          "value": 0
        },
        {
          "name": "trigger_state",
          "type": "string",
          "value": "unset"
        }
      ],
      "states": [
        {
          "state_id": 0,
          "div": {
            "type": "container",
            "height": {
              "type": "fixed",
              "value": 300
            },
            "items": [
              {
                "type": "text_block",
                "text": "Total count: @{counter}, trigger state \\@{counter > 100}: @{trigger_state}"
              },
              {
                "type": "div_base",
                "items": [
                  {
                    "type": "item",
                    "text": "item/1",
                    "background": [
                      {
                        "color": "#49a5a5",
                        "type": "solid"
                      }
                    ]
                  },
                  {
                    "type": "item",
                    "text": "item/2",
                    "background": [
                      {
                        "color": "#49a141",
                        "type": "solid"
                      }
                    ]
                  },
                  {
                    "type": "item",
                    "text": "item/3",
                    "background": [
                      {
                        "color": "#4975a5",
                        "type": "solid"
                      }
                    ]
                  },
                  {
                    "type": "item",
                    "text": "item/4",
                    "variable_triggers": [
                      {
                        "condition": "@{counter > 100}",
                        "actions": [
                          {
                            "log_id": "trigger_invoke",
                            "url": "div-action://set_variable?name=trigger_state&value=activated"
                          }
                        ]
                      }
                    ],
                    "background": [
                      {
                        "color": "#11e5a5",
                        "type": "solid"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  },
  "steps": [
    {
      "expected_screenshot": "step0.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=counter&value=50",
          "log_id": "set_50"
        }
      ]
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=counter&value=110",
          "log_id": "set_110"
        }
      ],
      "expected_screenshot": "step2.png"
    }
  ]
}
