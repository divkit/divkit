{
  "description": "Fixed length input mask",
  "platforms": [
    "ios",
    "android",
    "web"
  ],
  "div_data": {
    "card": {
      "log_id": "ui_test_card",
      "variables": [
        {
          "name": "input",
          "type": "string",
          "value": ""
        },
        {
          "name": "raw_input",
          "type": "string",
          "value": ""
        },
        {
          "name": "mask",
          "type": "string",
          "value": "$#### $####"
        },
        {
          "name": "key_1",
          "type": "string",
          "value": "#"
        },
        {
          "name": "filter_1",
          "type": "string",
          "value": "."
        },
        {
          "name": "placeholder",
          "type": "string",
          "value": "_"
        },
        {
          "name": "key_2",
          "type": "string",
          "value": "$"
        },
        {
          "name": "filter_2",
          "type": "string",
          "value": "."
        },
        {
          "name": "always_visible",
          "type": "boolean",
          "value": false
        }
      ],
      "states": [
        {
          "state_id": 0,
          "div": {
            "type": "container",
            "background": [
              {
                "type": "solid",
                "color": "#ffffff"
              }
            ],
            "items": [
              {
                "type": "text",
                "text": "Formatted value: '@{input}'"
              },
              {
                "type": "text",
                "text": "Raw value: '@{raw_input}'"
              },
              {
                "type": "input",
                "text_variable": "input",
                "paddings": {
                  "start": 10,
                  "end": 10,
                  "top": 5,
                  "bottom": 5
                },
                "margins": {
                  "start": 5,
                  "end": 5,
                  "top": 5,
                  "bottom": 5
                },
                "background": [
                  {
                    "type": "solid",
                    "color": "#eeeeee"
                  }
                ],
                "mask": {
                  "type": "fixed_length",
                  "pattern": "@{mask}",
                  "raw_text_variable": "raw_input",
                  "pattern_elements": [
                    {
                      "key": "@{key_1}",
                      "regex": "@{filter_1}",
                      "placeholder": "@{placeholder}"
                    },
                    {
                      "key": "@{key_2}",
                      "regex": "@{filter_2}",
                      "placeholder": "@{placeholder}"
                    }
                  ],
                  "always_visible": "@{always_visible}"
                }
              },
              {
                "type": "text",
                "text": "mask: @{mask}; @{key_1}=@{filter_1}, @{key_2}=@{filter_2}"
              },
              {
                "type": "text",
                "text": "Show placeholders: @{always_visible}"
              }
            ]
          }
        }
      ]
    }
  },
  "steps": [
    {
      "expected_screenshot": "step0.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=Test",
          "log_id": "changing_text_to_capitalized"
        }
      ],
      "expected_screenshot": "step1.png"
    },
    {
      "div_actions": [
        {
          "log_id": "show_placeholders",
          "url": "div-action://set_variable?name=always_visible&value=true"
        }
      ],
      "expected_screenshot": "step2.png"
    },
    {
      "div_actions": [
        {
          "log_id": "hide_placeholders",
          "url": "div-action://set_variable?name=always_visible&value=false"
        }
      ],
      "expected_screenshot": "step3.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=ALotSymbolsToOverflow",
          "log_id": "changing_text_to_overflow"
        }
      ],
      "expected_screenshot": "step4.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=",
          "log_id": "clear_input"
        }
      ],
      "expected_screenshot": "step5.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=%D0%9F%D1%80%D0%B8%D0%B2%D0%B5%D1%82%D0%9C%D0%B8%D1%80",
          "log_id": "input_cyrillic"
        }
      ],
      "expected_screenshot": "step6.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=ðŸ˜€ðŸ˜ƒ",
          "log_id": "input_emoji"
        }
      ],
      "expected_screenshot": "step7.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=Hi123%D0%9F%D1%80%D0%B8%D0%B2%D0%B5%D1%82",
          "log_id": "input_mixed"
        }
      ],
      "expected_screenshot": "step8.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=!@%23$%25^&*()",
          "log_id": "input_special"
        }
      ],
      "expected_screenshot": "step9.png"
    },
    {
      "div_actions": [
        {
          "url": "div-action://set_variable?name=raw_input&value=1234567890",
          "log_id": "input_numbers"
        }
      ],
      "expected_screenshot": "step10.png"
    }
  ]
}
