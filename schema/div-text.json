          "type": "string",
          "enum": [
            "none", "start", "end", "middle"
          ],
          "default_value": "end",
          "$description": "translations.json#/div_text_truncate",
          "deprecated": true,
          "code_generation_disabled_kotlin": true,
          "code_generation_disabled_swift": true
        }
