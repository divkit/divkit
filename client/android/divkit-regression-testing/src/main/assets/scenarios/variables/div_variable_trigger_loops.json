{
  "templates": {
    "color_slider": {
      "type": "container",
      "orientation": "horizontal",
      "paddings": {
        "left": 8,
        "top": 8,
        "bottom": 0,
        "right": 8
      },
      "items": [
        {
          "type": "text",
          "width": {
            "type": "wrap_content",
            "weight": 1
          },
          "height": {
            "type": "wrap_content"
          },
          "alignment_vertical": "center",
          "font_size": 20,
          "font_weight": "regular",
          "$text_color": "accent_color",
          "$text": "title"
        },
        {
          "type": "slider",
          "$thumb_value_variable": "slider_variable",
          "min_value": 0,
          "max_value": 255,
          "width": {
            "type": "match_parent",
            "weight": 8
          },
          "height": {
            "type": "wrap_content"
          },
          "alignment_vertical": "center",
          "thumb_style": {
            "type": "shape_drawable",
            "$color": "accent_color",
            "shape": {
              "type": "rounded_rectangle",
              "item_height": {
                "type": "fixed",
                "value": 32
              },
              "item_width": {
                "type": "fixed",
                "value": 32
              }
            }
          },
          "tick_mark_active_style": {
            "type": "shape_drawable",
            "$color": "accent_color",
            "shape": {
              "type": "rounded_rectangle",
              "item_height": {
                "type": "fixed",
                "value": 8
              },
              "item_width": {
                "type": "fixed",
                "value": 8
              },
              "corner_radius": {
                "type": "fixed",
                "value": 5
              }
            }
          },
          "track_active_style": {
            "type": "shape_drawable",
            "color": "#ff0000",
            "shape": {
              "type": "rounded_rectangle",
              "item_height": {
                "type": "fixed",
                "value": 6
              }
            }
          },
          "track_inactive_style": {
            "type": "shape_drawable",
            "color": "#20000000",
            "shape": {
              "type": "rounded_rectangle",
              "item_height": {
                "type": "fixed",
                "value": 6
              }
            }
          },
          "thumb_text_style": {
            "font_size": 16,
            "text_color": "@{dark_sky}",
            "font_weight": "bold"
          }
        },
        {
          "type": "input",
          "width": {
            "type": "match_parent",
            "weight": 2
          },
          "height": {
            "type": "wrap_content"
          },
          "margins": {
            "left": 16
          },
          "paddings": {
            "left": 8,
            "right": 8
          },
          "alpha": 1.0,
          "alignment_vertical": "center",
          "background": [
            {
              "type": "solid",
              "$color": "accent_color"
            }
          ],
          "border": {
            "corner_radius": 4,
            "has_shadow": 1
          },
          "font_size": 20,
          "font_weight": "medium",
          "text_color": "@{dark_sky}",
          "$text_variable": "input_variable",
          "$hint_text": "title",
          "max_lines": 2,
          "line_height": 40,
          "select_all_on_focus": 1,
          "keyboard_type": "number"
        }
      ]
    }
  },
  "card": {
    "log_id": "trigger_loop",
    "variables": [
      {
        "name": "alpha_int",
        "type": "integer",
        "value": 255
      },
      {
        "name": "alpha_str",
        "type": "string",
        "value": ""
      },

      {
        "name": "red_int",
        "type": "integer",
        "value": 250
      },
      {
        "name": "red_str",
        "type": "string",
        "value": "0"
      },

      {
        "name": "green_int",
        "type": "integer",
        "value": 166
      },
      {
        "name": "green_str",
        "type": "string",
        "value": "0"
      },

      {
        "name": "blue_int",
        "type": "integer",
        "value": 65
      },
      {
        "name": "blue_str",
        "type": "string",
        "value": "0"
      },

      {
        "name": "sky_blue",
        "type": "color",
        "value": "#3498DB"
      },
      {
        "name": "mint_green",
        "type": "color",
        "value": "#1ABC9C"
      },
      {
        "name": "dark_sky",
        "type": "color",
        "value": "#2C3E50"
      },
      {
        "name": "medium_sea_green",
        "type": "string",
        "value": "#2ECC71"
      },
      {
        "name": "cinnabar",
        "type": "string",
        "value": "#E74C3C"
      }
    ],
    "variable_triggers": [
      {
        "condition": "@{alpha_int >= 0}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "slider A change",
            "url": "div-action://set_variable?name=alpha_str&value=@{alpha_int}"
          }
        ]
      },
      {
        "condition": "@{alpha_str != ''}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "input A change",
            "url": "div-action://set_variable?name=alpha_int&value=@{alpha_str}"
          }
        ]
      },
      {
        "condition": "@{alpha_int >= 0}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "slider A change",
            "url": "div-action://set_variable?name=alpha_str&value=@{alpha_int}"
          }
        ]
      },
      {
        "condition": "@{alpha_str != ''}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "input A change",
            "url": "div-action://set_variable?name=alpha_int&value=@{alpha_str}"
          }
        ]
      },
      {
        "condition": "@{red_int >= 0}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "slider R change",
            "url": "div-action://set_variable?name=red_str&value=@{red_int}"
          }
        ]
      },
      {
        "condition": "@{red_str != ''}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "input R change",
            "url": "div-action://set_variable?name=red_int&value=@{red_str}"
          }
        ]
      },
      {
        "condition": "@{green_int >= 0}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "slider G change",
            "url": "div-action://set_variable?name=green_str&value=@{green_int}"
          }
        ]
      },
      {
        "condition": "@{green_str != ''}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "input G change",
            "url": "div-action://set_variable?name=green_int&value=@{green_str}"
          }
        ]
      },
      {
        "condition": "@{blue_int >= 0}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "slider B change",
            "url": "div-action://set_variable?name=blue_str&value=@{blue_int}"
          }
        ]
      },
      {
        "condition": "@{blue_str != ''}",
        "mode": "on_variable",
        "actions": [
          {
            "log_id": "input B change",
            "url": "div-action://set_variable?name=blue_int&value=@{blue_str}"
          }
        ]
      }
    ],
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "margins": {
            "left": 8,
            "top": 8,
            "right": 8,
            "bottom": 8
          },
          "paddings": {
            "left": 8,
            "top": 8,
            "right": 8,
            "bottom": 8
          },
          "background": [
            {
              "type": "solid",
              "color": "#34495E"
            }
          ],
          "border": {
            "corner_radius": 8,
            "has_shadow": 1
          },
          "items": [
            {
              "type": "color_slider",
              "title": "A:",
              "accent_color": "@{mint_green}",
              "slider_variable": "alpha_int",
              "input_variable": "alpha_str"
            },
            {
              "type": "color_slider",
              "title": "R:",
              "accent_color": "@{cinnabar}",
              "slider_variable": "red_int",
              "input_variable": "red_str"
            },
            {
              "type": "color_slider",
              "title": "G:",
              "accent_color": "@{medium_sea_green}",
              "slider_variable": "green_int",
              "input_variable": "green_str"
            },
            {
              "type": "color_slider",
              "title": "B:",
              "accent_color": "@{sky_blue}",
              "slider_variable": "blue_int",
              "input_variable": "blue_str"
            },
            {
              "type": "separator",
              "paddings": {
                "top": 16
              },
              "delimiter_style": {
                "color": "@{dark_sky}"
              }
            },
            {
              "type": "text",
              "height": {
                "type": "fixed",
                "value": 48
              },
              "margins": {
                "left": 8,
                "top": 16,
                "right": 8,
                "bottom": 8
              },
              "background": [
                {
                  "type": "solid",
                  "color": "@{argb(toNumber(alpha_int) / 255.0, toNumber(red_int) / 255.0, toNumber(green_int) / 255.0, toNumber(blue_int) / 255.0)}"
                }
              ],
              "border": {
                "corner_radius": 4
              },
              "font_size": 16,
              "font_weight": "medium",
              "text_alignment_horizontal": "center",
              "text_alignment_vertical": "center",
              "text_color": "@{dark_sky}",
              "text": "@{toString(argb(toNumber(alpha_int) / 255.0, toNumber(red_int) / 255.0, toNumber(green_int) / 255.0, toNumber(blue_int) / 255.0))}"
            }
          ]
        }
      }
    ]
  }
}
