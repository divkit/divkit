<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Widget.Div.BaseIndicatorTabLayout" parent="android:Widget">
        <item name="android:background">@null</item>
        <item name="tabIconTint">@null</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorAnimationDuration">@integer/tab_indicator_anim_duration_ms
        </item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicator">@drawable/tabs_default_indicator</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Div.Tab</item>
        <item name="tabTextColor">@null</item>
        <item name="tabRippleColor">?attr/colorControlHighlight</item>
        <item name="tabUnboundedRipple">false</item>

        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="TextAppearance.Div.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Div"/>

    <style name="Div.Text"/>

    <style name="Div.Image"/>

    <style name="Div.Tabs"/>

    <style name="Div.Tabs.IndicatorTabLayout">
        <item name="tabTextAppearance">@style/Div.Tabs.IndicatorTabLayout.Text</item>
        <item name="tabIndicatorColor">@color/div_tab_indicator</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabContentEnd">0dp</item>
        <item name="tabContentStart">0dp</item>
        <item name="tabPaddingBottom">1dp</item>
        <item name="tabTextColor">@color/div_text_dark_disabled_50</item>
        <item name="tabSelectedTextColor">@color/div_text_dark_disabled_80</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Div.Tabs.IndicatorTabLayout.Text" parent="TextAppearance.Div.Tab">
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Div.Theme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="divTextStyle">@style/Div.Text</item>
        <item name="divGalleryStyle">@style/Div.Gallery</item>
        <item name="divImageStyle">@style/Div.Image</item>
        <item name="divTabIndicatorLayoutStyle">@style/Div.Tabs.IndicatorTabLayout</item>
    </style>

    <style name="Div.Gallery" parent="android:Widget">
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
