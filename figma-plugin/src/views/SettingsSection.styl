.settings-section
    padding 0 16px

    &__header
        display flex
        align-items center
        margin 10px 0

    &__input
        width 100%
        border 1px solid rgba(51, 51, 51, 0.12)
        border-radius 12px
        margin-top 16px
        height 34px
        padding 0 12px

    &__save-token-warn
        font-size 12px
        color red

    &__how-to-link
        color cornflowerblue
        cursor pointer

    &__save-token-button
        margin-top 18px

    &__styles-section
        margin-top 32px

    &__styles-buttons
        display flex
        gap 16px
        margin-top 18px

    &__back-button
        margin-right 10px
        width 20px
        height 20px

    &__back-icon
        width 8px
        height 14px
        background-size 8px 14px
        background-position 50%
        background-repeat no-repeat
        background-image url(../assets/arrow.svg?data-uri)

